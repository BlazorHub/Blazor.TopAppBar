@page "/"

<h1>Blazor Top App Bar</h1>
<h2 class="pl-5">by <img src="mobsites-logo.png" width="42" height="42" /> Mobsites</h2>
<br />
<form>
  <div class="row">
    <div class="col col-md-6 col-lg-4">
      <div class="form-group">
        <label for="top-app-bar-type">Select Type</label>
        <select class="form-control" id="top-app-bar-type" @oninput="@((e) => MainLayout.NavMenu.ChangeType(Enum.Parse<TopAppBar.Types>(e.Value as string)))">
          <option value="@TopAppBar.Types.Standard">Standard</option>
          <option value="@TopAppBar.Types.Fixed">Fixed</option>
          <option value="@TopAppBar.Types.Prominent">Prominent</option>
          <option value="@TopAppBar.Types.Dense">Dense</option>
          <option value="@TopAppBar.Types.Short">Short</option>
          <option value="@TopAppBar.Types.ShortAlways">Short Always</option>
        </select>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col col-md-6 col-lg-4">
      <input class="form-control" type="text" placeholder="Change title" @oninput="@((e) => MainLayout.NavMenu.ChangeBrandTitle(e.Value as string))" />
    </div>
  </div>
  <div class="row mt-2">
    <div class="col col-md-6 col-lg-4">
        <div class="form-group form-check">
            <input checked type="checkbox" class="form-check-input" id="brand-image-use" value="true" @onchange="@((e) => MainLayout.NavMenu.UseBrandImage((bool)(e.Value as bool?)))" />
            <label class="form-check-label" for="brand-image-use">Use brand image</label>
        </div>
    </div>
  </div>
  <div class="row">
    <div class="col col-md-6 col-lg-4">
        <div class="form-group form-check">
            <input checked type="checkbox" class="form-check-input" id="scrolll-to-top" value="true" @onchange="@((e) => MainLayout.NavMenu.ScrollToTop((bool)(e.Value as bool?)))" />
            <label class="form-check-label" for="scrolll-to-top">Scroll to top of page when nav icon is clicked</label>
        </div>
    </div>
  </div>
</form>
<br />
<b>On small devices:</b>
<ul class="list-unstyled pl-4 mt-2">
    <li>
        <div class="form-group form-check">
            <input type="checkbox" class="form-check-input" id="brand-title-hide" value="false" @onchange="@((e) => MainLayout.NavMenu.HideBrandTitle((bool)(e.Value as bool?)))" />
            <label class="form-check-label" for="brand-title-hide">Hide brand title</label>
        </div>
    </li>
    <li>
        <div class="form-group form-check">
            <input type="checkbox" class="form-check-input" id="brand-image-hide" value="false" @onchange="@((e) => MainLayout.NavMenu.HideBrandImage((bool)(e.Value as bool?)))" />
            <label class="form-check-label" for="brand-image-hide">Hide brand image</label>
        </div>
    </li>
    <li>
        <div class="form-group form-check">
            <input type="checkbox" class="form-check-input" id="show-actions-always" value="false" @onchange="@((e) => MainLayout.NavMenu.ShowActionsAlways((bool)(e.Value as bool?)))" />
            <label class="form-check-label" for="show-actions-always">Show all actions</label>
        </div>
    </li>
</ul>
